---
interface Props {
    image: string;
    title: string;
    date: string;
    description: string;
    location: string;
    price: string;
    badge?: {
        text: string;
        colorClass: string;
    };
    reserveLink: string;
    calendarLink: string;
    priceClass?: string;
    buttonClass?: string;
}

const {
    image,
    title,
    date,
    description,
    location,
    price,
    badge,
    reserveLink,
    calendarLink,
    priceClass = "text-sc-orange",
    buttonClass = "gradient-bg",
} = Astro.props;
---

<div
    class="bg-white rounded-2xl overflow-hidden shadow-lg hover-lift border border-gray-100 h-full flex flex-col"
>
    <div class="relative">
        <img src={image} alt={title} class="w-full h-48 object-cover" />
        {
            badge && (
                <div
                    class={`absolute top-4 right-4 text-white px-3 py-1 rounded-full font-bold text-sm ${badge.colorClass}`}
                >
                    {badge.text}
                </div>
            )
        }
    </div>
    <div class="p-6 flex flex-col grow">
        <div class="text-sm text-gray-600 mb-2">{date}</div>
        <h4 class="text-xl font-bold mb-2 text-gray-800">
            {title}
        </h4>
        <p class="text-gray-600 text-sm mb-4 grow">
            {description}
        </p>
        <div class="flex items-center justify-between mb-4">
            <span class="text-sm font-semibold text-gray-700"
                >üìç {location}</span
            >
            <span class={`font-bold ${priceClass}`}>{price}</span>
        </div>
        <div class="flex gap-2 mb-2">
            <a
                href={reserveLink}
                class={`flex-1 text-white text-center py-2 rounded-lg text-sm font-semibold hover:shadow-lg transition ${buttonClass}`}
            >
                Reservar
            </a>
        </div>
        <a
            href={calendarLink}
            target="_blank"
            class="block w-full text-center py-2 border border-blue-500 text-blue-600 rounded-lg text-xs font-semibold hover:bg-blue-50 transition"
        >
            üìÖ Agregar
        </a>
    </div>
</div>
